                                    @*<img src="../assets/images/login-img.svg" alt="login-img">*@
                                    <img src="~/assets/images/login-img.svg" alt="login-img">
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6 d-flex justify-content-center align-items-center border-0 rounded-lg auth-h100">
                            <div class="w-100 p-3 p-md-5 card border-0 bg-dark text-light" style="max-width: 32rem;">
                                <!-- Form -->
                                <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="row g-1 p-3 p-md-4">
                                    <div class="col-12 text-center mb-1 mb-lg-5">
                                        <h1>Создание нового аккаунта</h1>
                                        @*<span>Free access to our dashboard.</span>*@
                                    </div>
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="col-12">
                                        <div class="mb-2">
                                            <label class="form-label">Полное имя</label>
                                            <input asp-for="Input.FullName" class="form-control form-control-lg" placeholder="Name Surname">
                                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    @*<div class="col-6">
                                        <div class="mb-2">
                                            <label class="form-label">&nbsp;</label>
                                            <input type="email" class="form-control form-control-lg" placeholder="Parker">
                                        </div>
                                    </div>*@
                                    <div class="col-12">
                                        <div class="mb-2">
                                            <label asp-for="Input.Email" class="form-label"></label>
                                            <input asp-for="Input.Email" class="form-control form-control-lg" placeholder="name@example.com">
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="mb-2">
                                            <label class="form-label">Пароль</label>
                                            <input asp-for="Input.Password" class="form-control form-control-lg" placeholder="***************">
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="mb-2">
                                            <label class="form-label">Подтвердите пароль</label>
                                            <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" placeholder="***************">
                                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    @*<div class="col-12">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                            <label class="form-check-label" for="flexCheckDefault">
                                                I accept the <a href="#" title="Terms and Conditions" class="text-secondary">Terms and Conditions</a>
                                            </label>
                                        </div>
                                    </div>*@
                                    <div class="col-12 text-center mt-4">
                                        <button type="submit" class="btn btn-lg btn-block btn-light lift text-uppercase">Создать учётную запись</button>
                                        @*<a href="auth-signin.html" class="btn btn-lg btn-block btn-light lift text-uppercase" alt="SIGNUP">SIGN UP</a>*@
                                    </div>
                                    <div class="col-12 text-center mt-4">
                                        <span class="text-muted">Уже есть учетная запись? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" title="Sign in" class="text-secondary">Войти</a></span>
                                    </div>
                                </form>
                                <!-- End Form -->
                            </div>
                        </div>
                    </div> <!-- End Row -->
                </div>
            </div>
        </div>
    </div>
